<?xml version="1.0" encoding="UTF-8"?>
<includes>
	<include name="Script_UpNext_Layout">
		<param name="Title_Breadcrumb_Label" />
		<param name="Info_Breadcrumb_Label_visible" default="false" />
		<param name="Info_Breadcrumb_Label" />
		<param name="show_icon" default="false" />
		<definition>
			<!-- Details -->
			<control type="grouplist">
				<top>0</top>
				<height>180</height>
				<width>1800</width>
				<right>60</right>
				<orientation>vertical</orientation>
				<align>center</align>
				<itemgap>0</itemgap>
				<control type="label">
					<height>40</height>
					<label>$PARAM[Title_Breadcrumb_Label]</label>
					<font>MusicPlayer_Title</font>
					<textcolor>$VAR[Light_Color]</textcolor>
					<align>right</align>
				</control>
				<control type="label">
					<visible>$PARAM[Info_Breadcrumb_Label_visible]</visible>
					<height>35</height>
					<label>$PARAM[Info_Breadcrumb_Label]</label>
					<font>MusicPlayer_Info</font>
					<textcolor>$VAR[Light_Color]</textcolor>
					<align>right</align>
				</control>
			</control>
			<!-- Thumbnail -->
			<control type="group">
				<visible>$PARAM[show_icon]</visible>
				<width>320</width>
				<height>180</height>
				<right>0</right>
				<bottom>120</bottom>
				<control type="image">
					<animation effect="fadediffuse" end="ff555555" time="0" condition="true">Conditional</animation>
					<texture>$INFO[Window.Property(fanart)]</texture>
				</control>
				<control type="progress" id="3014">
					<height>6</height>
					<bottom>0</bottom>
					<texturebg colordiffuse="$VAR[Progress_Light_Background_Color]">views/white_100.png</texturebg>
					<midtexture colordiffuse="$VAR[Light_Color]">views/white_100.png</midtexture>
				</control>
			</control>
			<!-- Button menu -->
			<include content="Button_Group_Template">
				<param name="button1" value="true" />
				<param name="button1_id" value="3012" />
				<param name="button1_texture" value="Play" />
				<param name="button2" value="true" />
				<param name="button2_id" value="3013" />
				<param name="button2_texture" value="Cross" />
				<param name="color" value="$VAR[Light_Color]" />
				<param name="unfocused_color" value="$VAR[Light_Color]" />
			</include>

		</definition>
	</include>
</includes>